# MCP Gateway Configuration
# Copy this file to .env and customize

# Transport mode: stdio | http
MCP_TRANSPORT=stdio

# HTTP server settings (only used when MCP_TRANSPORT=http)
MCP_HTTP_PORT=3000
MCP_HTTP_HOST=127.0.0.1

# Config file path
MCP_CONFIG_PATH=./config.yaml

# Audit log file (optional, logs to stdout if not set)
MCP_AUDIT_FILE=./audit.jsonl

# Log level: debug | info | warn | error
MCP_LOG_LEVEL=info

# Actor identity (for audit logs)
MCP_ACTOR=local-user

# PostgreSQL connection (for postgres connector)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=readonly_user
POSTGRES_PASSWORD=
POSTGRES_DATABASE=mydb
POSTGRES_SSL=false
